<body>
  <div class="card">
    <h1>Rekensom</h1>
    <p>Los op: <strong>X² + 12X + 4 = 0</strong></p>

    <form id="form" class="row" autocomplete="off">
      <input id="answer" type="number" step="any" placeholder="Vul X in…" required />
      <button type="submit">Controleer</button>
    </form>

    <div id="msg" class="msg" aria-live="polite"></div>
    <div class="timer" id="timer">60</div>
  </div>

  <script>
    // Oplossingen: -6 ± 4√2
    const roots = [-6 + 4*Math.SQRT2, -6 - 4*Math.SQRT2];
    const tol = 0.01;

    function isCorrect(x){
      const residual = Math.abs(x*x + 12*x + 4);
      const nearRoot = Math.min(Math.abs(x - roots[0]), Math.abs(x - roots[1]));
      return residual < 0.01 || nearRoot < tol;
    }

    const form = document.getElementById('form');
    const input = document.getElementById('answer');
    const msgEl = document.getElementById('msg');
    const timerEl = document.getElementById('timer');

    // Timer instellen
    let timeLeft = 60;
    const countdown = setInterval(() => {
      timeLeft--;
      timerEl.textContent = timeLeft;

      // Verander stijl bij <=10 seconden
      if (timeLeft <= 10) {
        timerEl.classList.add("warning");
      }

      if (timeLeft <= 0) {
        clearInterval(countdown);
        window.location.href = "anderepagina.html";
      }
    }, 1000);

    // Form afhandeling
    form.addEventListener('submit', function(e){
      e.preventDefault();
      const val = parseFloat(input.value.replace(',', '.'));
      if (!Number.isFinite(val)) {
        msgEl.textContent = 'Voer een geldig getal in.';
        msgEl.className = 'msg err';
        return;
      }
      if (isCorrect(val)) {
        clearInterval(countdown); // stop timer
        msgEl.textContent = 'Correct! Je gaat terug naar de vorige pagina…';
        msgEl.className = 'msg ok';
        setTimeout(() => {
          if (history.length > 1) {
            history.back();
          } else {
            window.location.href = "/";
          }
        }, 800);
      } else {
        msgEl.textContent = 'Helaas, dat klopt niet.';
        msgEl.className = 'msg err';
        input.focus();
      }
    });
  </script>
</body>
</html>
