  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Rekensom met timer</title>
  <style>
    body {
      display:flex; 
      justify-content:center; 
      align-items:center; 
      height:100vh; 
      margin:0;
      background:#f7f7fb; 
      font-family: Arial, sans-serif;
    }
    .card {
      background:#fff; 
      padding:24px; 
      border-radius:16px; 
      box-shadow:0 10px 30px rgba(0,0,0,.08); 
      width:min(500px, 90vw);
      text-align:center;
    }
    h1 { margin:0 0 12px; font-size:1.25rem; }
    p  { margin:0 0 16px; color:#444; }
    .row { display:flex; gap:10px; margin-top:10px; justify-content:center; }
    input[type="number"]{
      flex:1; padding:10px 12px; border:1px solid #ccc; border-radius:10px; font-size:1rem;
    }
    button{
      padding:10px 14px; border:none; border-radius:10px; background:#6c6cff; color:#fff; font-weight:600; cursor:pointer;
    }
    button:hover{ filter:brightness(0.95); }
    .msg{ margin-top:12px; font-weight:600; }
    .ok{ color:#2e7d32; } 
    .err{ color:#c62828; }
    .timer { font-size:2.5rem; font-weight:bold; margin-top:16px; color:#333; transition: color 0.3s, transform 0.3s; }
    .warning { color:#d32f2f; transform: scale(1.2); }
  </style>
